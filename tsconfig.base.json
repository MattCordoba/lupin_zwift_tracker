{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lupin/ui": ["packages/ui/src"],
      "@lupin/core": ["packages/core/src"],
      "@lupin/config": ["packages/config/src"],
      "@lupin/types": ["packages/types/src"],
      "@lupin/data": ["packages/data/src"]
    }
  }
}
